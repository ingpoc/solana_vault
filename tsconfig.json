{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist1",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": "./src",
        "lib": ["es6", "dom"]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules","dist","dist1"
    ]
}